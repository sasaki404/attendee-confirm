<section class="hero is-primary is-small">
  <div class="hero-body">
  <div class="container has-text-center">
  <p class="title">
    参加確認登録
    </p>
    </div>
    
  </div>
</section>

<% if @task.errors.any? %>
  <div class="notification is-danger">
    <h2><%= pluralize(@task.errors.count, "error") %>このエラーがあります</h2>
    <ul>
      <% @task.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @task do |f| %>
            <%= f.radio_button :completed, :true %>
            <%= f.label :completed, "参加する", {value: :true, style: "display: inline-block;"} %>
            <%= f.radio_button :completed, :false %>
            <%= f.label :completed, "参加しない", {value: :false, style: "display: inline-block;"} %>
            <br><br>
        参加する種類を選択<br>
          <%= f.select :syozoku, [["土曜日", "土曜日"], ["日曜日", "日曜日"]], include_blank: "参加する場合は選択して下さい" %>
<br><br>
          <%= f.submit '登録', class: "button is-success" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
